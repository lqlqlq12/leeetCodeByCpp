{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build current cpp file",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}",
                "-I",
                "${workspaceFolder}/Structure"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "编译当前 C++ 文件"
        },
        {
            "type": "shell",
            "label": "build and run current cpp file",
            "command": "bash",
            "args": [
              "-c",
              "clang++ -std=c++17 -g \"${file}\" -o \"${workspaceFolder}/bin/${fileBasenameNoExtension}\" -I \"${workspaceFolder}/Structure\" && \"${workspaceFolder}/bin/${fileBasenameNoExtension}\""
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}